{
    "name": "@buddybot/api",
    "version": "1.0.0",
    "description": "BuddyBot GraphQL API сервер",
    "main": "dist/server.js",
    "types": "dist/server.d.ts",
    "scripts": {
      "dev": "tsx watch src/server.ts",
      "build": "tsc",
      "start": "node dist/server.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint src --ext .ts",
      "lint:fix": "eslint src --ext .ts --fix",
      "type-check": "tsc --noEmit",
      "clean": "rimraf dist",
      "codegen": "prisma generate && graphql-codegen"
    },
    "dependencies": {
      "express": "^4.18.2",
      "apollo-server-express": "^3.12.1",
      "graphql": "^16.8.1",
      "@pothos/core": "^3.41.0",
      "@pothos/plugin-prisma": "^3.61.0",
      "@pothos/plugin-relay": "^3.45.0",
      "@pothos/plugin-validation": "^3.9.1",
      "@pothos/plugin-scope-auth": "^3.19.1",
      "@pothos/plugin-dataloader": "^3.18.0",
      "@prisma/client": "^5.8.0",
      "prisma": "^5.8.0",
      "redis": "^4.6.13",
      "ioredis": "^5.3.2",
      "zod": "^3.22.4",
      "jsonwebtoken": "^9.0.2",
      "bcryptjs": "^2.4.3",
      "uuid": "^9.0.1",
      "date-fns": "^3.2.0",
      "winston": "^3.11.0",
      "dotenv": "^16.3.1",
      "cors": "^2.8.5",
      "helmet": "^7.1.0",
      "express-rate-limit": "^7.1.5",
      "compression": "^1.7.4",
      "morgan": "^1.10.0",
      "multer": "^1.4.5-lts.1",
      "nodemailer": "^6.9.8",
      "bull": "^4.12.2",
      "dataloader": "^2.2.2"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/node": "^20.11.0",
      "@types/cors": "^2.8.17",
      "@types/compression": "^1.7.5",
      "@types/morgan": "^1.9.9",
      "@types/multer": "^1.4.11",
      "@types/bcryptjs": "^2.4.6",
      "@types/jsonwebtoken": "^9.0.5",
      "@types/uuid": "^9.0.7",
      "@types/nodemailer": "^6.4.14",
      "@types/jest": "^29.5.11",
      "@types/supertest": "^6.0.2",
      "typescript": "^5.3.0",
      "tsx": "^4.7.0",
      "jest": "^29.7.0",
      "ts-jest": "^29.1.1",
      "supertest": "^6.3.4",
      "rimraf": "^5.0.5",
      "@graphql-codegen/cli": "^5.0.0",
      "@graphql-codegen/typescript": "^4.0.1",
      "@graphql-codegen/typescript-resolvers": "^4.0.1",
      "eslint": "^8.56.0",
      "@typescript-eslint/eslint-plugin": "^6.18.1",
      "@typescript-eslint/parser": "^6.18.1"
    },
    "keywords": [
      "graphql", 
      "api", 
      "typescript", 
      "prisma", 
      "redis",
      "apollo-server"
    ]
  }